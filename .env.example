# Application Configuration
APP_NAME=Chatbot API
DEBUG=false
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Model Configuration
DEFAULT_MODEL=openai
VLLM_HOST=localhost
VLLM_PORT=8001

# API Keys (External Models)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# AWS Cognito Configuration (Primary)
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Auth0 Configuration (Legacy Fallback)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=your-auth0-audience

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Authentication Settings
ENABLE_AUTH=true
AUTH_REQUIRED_ENDPOINTS=["/v1/chat/completions", "/v1/models"]

# Data Collection Settings
ENABLE_LOGGING=true
DATA_RETENTION_DAYS=30

# AWS Lambda Configuration (Set automatically in Lambda)
AWS_LAMBDA_FUNCTION_NAME=chatbot-api
AWS_REGION=us-east-1