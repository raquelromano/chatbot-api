# Docker-specific environment configuration
# Copy this file to .env and customize for your deployment

# Application Configuration - Docker optimized
APP_NAME=Chatbot Wrapper API
DEBUG=false
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Model Configuration - Container networking
DEFAULT_MODEL=local
VLLM_HOST=vllm-server
VLLM_PORT=8000

# API Keys (set these with your actual keys)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Authentication Configuration (Auth0)
ENABLE_AUTH=false
# AUTH0_DOMAIN=your-tenant.auth0.com
# AUTH0_CLIENT_ID=your_auth0_client_id
# AUTH0_CLIENT_SECRET=your_auth0_client_secret
# AUTH0_AUDIENCE=https://your-api-identifier
# SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
AUTH_REQUIRED_ENDPOINTS=["/v1/chat/completions"]

# Data Collection and Monitoring
ENABLE_LOGGING=true
DATA_RETENTION_DAYS=30

# Container-specific settings
PYTHONPATH=/app
PYTHONUNBUFFERED=1